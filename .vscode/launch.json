{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Infiniteer (Debug)",
      "request": "launch",
      "type": "dart",
      "program": "lib/main.dart",
      "args": ["--flavor", "development"]
    },
    {
      "name": "Infiniteer Web (Port 3000)",
      "request": "launch",
      "type": "dart",
      "program": "lib/main.dart",
      "deviceId": "chrome",
      "toolArgs": ["--web-port=3000"]
    },
    {
      "name": "Infiniteer (Profile)",
      "request": "launch", 
      "type": "dart",
      "flutterMode": "profile",
      "program": "lib/main.dart"
    },
    {
      "name": "Infiniteer (Release)",
      "request": "launch",
      "type": "dart", 
      "flutterMode": "release",
      "program": "lib/main.dart"
    }
  ]
}